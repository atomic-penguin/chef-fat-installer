#!/usr/bin/env ruby
ENV['GEM_HOME']=ENV['GEM_HOME'] || '/opt/chef/gems/ruby-1.9.2-p180'
ENV['GEM_PATH']=ENV['GEM_PATH'] || '/opt/chef/gems/ruby-1.9.2-p180:/opt/chef/gems/ruby-1.9.2-p180@global'
ENV['PATH']='/opt/chef/gems/ruby-1.9.2-p180/bin:/opt/chef/gems/ruby-1.9.2-p180@global/bin:/opt/chef/rubies/ruby-1.9.2-p180/bin:' + ENV['PATH']

#
#  RDoc: Documentation tool for source code
#        (see lib/rdoc/rdoc.rb for more information)
#
#  Copyright (c) 2003 Dave Thomas
#  Released under the same terms as Ruby
#
#  $Revision: 27147 $

require 'rdoc/rdoc'

begin
  r = RDoc::RDoc.new
  r.document ARGV
rescue SystemExit
  raise
rescue Exception => e
  if $DEBUG_RDOC then
    $stderr.puts e.message
    $stderr.puts "#{e.backtrace.join "\n\t"}"
    $stderr.puts
  elsif Interrupt === e then
    $stderr.puts
    $stderr.puts 'Interrupted'
  else
    $stderr.puts "uh-oh! RDoc had a problem:"
    $stderr.puts e.message
    $stderr.puts
    $stderr.puts "run with --debug for full backtrace"
  end

  exit 1
end

